<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
	
	<context:component-scan base-package="com.iot.spring"></context:component-scan>
	
	<bean id="ex" class="com.iot.spring.Excute">
	<constructor-arg ref="dp"></constructor-arg>
	<property name="worker" ref="dg"></property>
	</bean>
	<bean id="dg" class="com.iot.spring.xml2.Designer"></bean>
	<bean id="dp" class="com.iot.spring.xml2.Developer"></bean>
</beans>
